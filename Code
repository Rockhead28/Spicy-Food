#write a blackjack game
#input 2 user. 1 dealer, 1 player
#start with player, then followed by dealer
#if player have card score below 21, have option to draw another card or can opt to stop. Up to a maximum of 5 cards
#winner must have higher score than the other user, and must be below 21 points. No minimum score
#Aces can be 1 or 11
#J,Q,K is 10

import random

start = input("Welcome to Ivan's Blackjack!. Hit [Enter] to Start Playing:")

card1 = random.randint (1,14)
card2 = random.randint (1,14)
card3 = random.randint (1,14)
card4 = random.randint (1,14)
card5 = random.randint (1,14)

#define card names
##card_name = {
    ##11: "Jack",
    ##12: "Queen",
    ##13: "King",
    ##1: "Aces"
    ##}

#determine card points

##card_deck = ['Aces',2,3,4,5,6,7,8,9,10,'Jack','Queen','King']

#define face card values
#Jack = 10
#Queen = 10
#King = 10
#Aces = 1



total1 = card1 + card2
total2 = total1 + card3
total3 = total2 + card4
total4 = total3 + card5

print (f"Your first two card is {card1} and {card2}. Total card number is {total1}")

while True:
    if total1 == 21:
        print ("Congrats! You have a blackjack!")
    else:
        first_input = input ("Would you still like to Play or Pass?").lower()
        while True:
            if first_input == 'pass':
                print (f"Your total points is {total1}.")
                final_player_score = total1
                break
            elif first_input == 'play':
                print (f"Your third card is {card3}. Total card number is {total2}.")
                final_player_score = total2
                break
            else:
                print ("Invalid Input, please try again.")
                break

print ("")
final_player_score = total2
final_player_score = total1
dealer_score = 18
if dealer_score>=final_player_score:
    print (f"Dealer score is {dealer_score}.")
    print ("Dealer Win! Would you like to play again?")
else:
    print (f"Dealer score is {dealer_score}.")
    print ("Player Win")
